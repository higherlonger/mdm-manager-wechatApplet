page {
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.frame {
  width: 100%;
}
.font_red {
  color: #E64340;
}
.font_yellow {
  color: #FCA12C;
}
.font_green {
  color: #09BB07;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 20rpx 0;
  margin-bottom: 20rpx;
}

.card .content {
  display: flex;
}

.card .left {
  flex: 0.3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #b2b2b2;
}

.card .left .status {
  margin-top: 20rpx;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.card .right {
  flex: 0.7;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 30rpx;
}

.card .right .job {
  /* margin-top: 20rpx; */
  margin-bottom: 15rpx;
}

.card .btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 15rpx 20rpx;
  border-top: 1px solid #b2b2b2;
  padding: 30rpx 0 0 0;
}
.btn .no{
  padding: 10rpx 30rpx;
  border:1px solid #e64340;
  color: #e64340;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.btn .yes{
  padding: 10rpx 30rpx;
  border:1px solid #09bb07;
  color: #09bb07;
  border-radius: 10rpx;
}
